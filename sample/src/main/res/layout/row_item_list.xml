<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="@dimen/flag_size"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rlPopulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/txtPopulationValue"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Capital : Kabul"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPopulation"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPopulationValue"
            android:layout_centerHorizontal="true"
            android:text="Population" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/imgFlag"
        android:layout_toLeftOf="@id/rlPopulation"
        android:layout_toRightOf="@id/imgFlag"
        android:layout_toStartOf="@id/rlPopulation">

        <TextView
            android:id="@+id/txtCountryNameAndCode"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afghanistan (AFN)" />

        <TextView
            android:id="@+id/txtCountryCapital"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCountryNameAndCode"
            android:text="Capital : Kabul" />

    </RelativeLayout>


</RelativeLayout>